<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="TodoREST.TodoItemPage" 
			 Title="Nueva Tarea">

    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="OnDeleteButtonClicked">
            <ToolbarItem.IconImageSource>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, UWP" Value="https://i.imgur.com/3qbMc3f.png" />
                </OnPlatform>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem Clicked="OnSaveButtonClicked">
            <ToolbarItem.IconImageSource>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, UWP" Value="https://i.imgur.com/5eP1JyF.png" />
                </OnPlatform>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                <GradientStop Color="#2196F3" Offset="0" />
                <GradientStop Color="Transparent" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <StackLayout Margin="20">

            <Label Text="TÃ­tulo" />
            <Entry Text="{Binding Path=Name}" 
               Placeholder="Introducir tarea" />
            <Label Text="Notas"  />
            <Entry Text="{Binding Path=Notes}"
               Placeholder="Introducir notas"  />

            <Grid ColumnDefinitions="*, *">
                
                <StackLayout Grid.Column="0">
                    <Label Text="Prioridad" VerticalOptions="Center" />
                    <Picker Title="Seleccione la Prioridad"
                    TitleColor="#1976D2" SelectedIndex="{Binding Path=Prioridad}" 
                    SelectedIndexChanged="Picker_SelectedIndexChanged"
                            HorizontalTextAlignment="Center" >
                        <Picker.Items>
                            <x:String>Ninguna</x:String>
                            <x:String>Baja</x:String>
                            <x:String>Moderada</x:String>
                            <x:String>Urgente</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>

                <StackLayout Grid.Column="1" Orientation="Vertical">
                    <Label Text="Realizado"  Margin="0,0,0,10"/>
                    <Switch IsToggled="{Binding Path=Done}" HorizontalOptions="Center"/>
                </StackLayout>
                
            </Grid>

           




        </StackLayout>
        
	</Grid>
</ContentPage>
